import java.util.Scanner;
public class Find_Index 
{
	static int n;
	static int ar[]=new int[n];
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("how many elements you jhave to store.");
		n=sc.nextInt();
		System.out.println("plz enter "+n+" elements.");
		for (int i = 0; i <n; i++)
		{
			ar[i]=sc.nextInt();
		}
		System.out.println("Entered elements are :");
		for (int i = 0; i < ar.length; i++)
		{
			System.out.print(ar[i]+" ");
		}
	}
	//System.out.println();
	static int findIndex(int x)
	{
		System.out.println("Enter the element for which you want to find the index.");
		Scanner sc=new Scanner(System.in);
		int p=sc.nextInt();
		for (int j = 0; j < ar.length; j++) 
		{
			if(p==ar[j])
			//System.out.println("Index of "+p+" is "+j);
				return j;
			else
			//System.out.println("Element not found.");
				return -1;
		}
		return 0;
	}
}